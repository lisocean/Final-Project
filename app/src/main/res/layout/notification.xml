<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bottom_main"
        android:orientation="horizontal"
        android:background="@drawable/itemtouch_bg">

    <ImageView
            android:id="@+id/image"
            android:layout_margin="2dp"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:scaleType="fitXY"
            android:backgroundTint="@color/backgroundColor"
            android:src="@color/backgroundColor"
    />
    <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/textOfSong"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textColor="#B3000000"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:textSize="17sp"
                tools:text="爱的双重魔力"/>

        <TextView
                android:id="@+id/textOfArtist"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                tools:text="By2-成人礼"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute">
        <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="30dp"
                android:paddingTop="10dp"
                android:src="@mipmap/pause_btn"
                android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/playNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="UnusedAttribute">
        <ImageView
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/next_normal"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="UnusedAttribute">
        <ImageView
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="17dp"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:src="@drawable/popup_del_item"
        />

    </LinearLayout>


</LinearLayout>