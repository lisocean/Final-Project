<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="vm"
                  type="com.lisocean.musicplayer.ui.musicplaying.viewmodel.MusicPlayingViewModel"/>
        <variable name="presenter"
                  type="com.lisocean.musicplayer.ui.presenter.Presenter"/>
    </data>
    <com.lisocean.musicplayer.widget.BackgroundRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_blackground"
            android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                app:title="@{vm.playingSong.name}"
                app:subtitle="@{vm.playingSong.artists}"
                app:titleTextAppearance="@style/netease_toolbar_title"
                app:titleTextColor="@color/white"
                app:subtitleTextColor="#80FFFFFF"
                app:navigationIcon="@drawable/back"
                android:background="@android:color/transparent"/>

        <FrameLayout
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/toolBar"
                android:layout_marginTop="-6dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_marginTop="60dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/playing_disc_blackground" />

                <com.lisocean.musicplayer.widget.AlbumViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center_horizontal"/>

                <View
                        android:id="@+id/view_line"
                        android:layout_width="match_parent"
                        android:layout_height="1.0dip"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/playing_topbar_line" />

                <ImageView
                        android:id="@+id/needle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/view_line"
                        android:layout_marginEnd="100dp"
                        android:layout_marginTop="-16dp"
                        android:rotation="-30"
                        android:src="@drawable/playing_needle"
                        android:transformPivotX="15.1dp"
                        android:transformPivotY="15.1dp"/>
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
                android:layout_above="@id/space2_playing_music"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/selector_playing_islove"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/playing_download_success"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <RelativeLayout
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <ImageView
                        android:id="@+id/playing_comment"
                        android:src="@drawable/playing_comments"
                        android:layout_width="wrap_content"
                        android:onClick="@{(v)->presenter.onClick(v)}"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        tools:ignore="SmallSp">

                </ImageView>
                <TextView
                        android:layout_alignTop="@id/playing_comment"
                        android:textSize="18px"
                        android:text = "            1w+"
                        android:textColor="@color/gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/playing_music_icn_more"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <Space
                android:id="@+id/space2_playing_music"
                android:layout_above="@id/linearLayout1Of_activity_music_playing"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <RelativeLayout
                android:id="@+id/linearLayout1Of_activity_music_playing"
                android:layout_above="@id/linearLayoutOf_activity_music_playing"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
            <TextView
                    android:layout_marginStart="15dp"
                    android:id="@+id/tvCurrentTime"
                    android:text="00:34"
                    style="@style/neteasa_music_time_text_sytle"
                    tools:text="00:34"/>
            <SeekBar
                    android:id="@+id/musicSeekBar"
                    android:layout_toEndOf="@id/tvCurrentTime"
                    android:layout_toStartOf="@id/tvTotalTime"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/music_progress_sb"
                    android:thumb="@drawable/seekbar_thumb"
                    android:paddingEnd="5dp"
                    android:paddingStart="15dp"
                    android:maxHeight="1.5dp"
                    android:minHeight="1.5dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="1dp"/>
            <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_marginEnd="15dp"
                    android:layout_width="35dp"
                    android:text="05:34"
                    android:layout_alignParentEnd="true"
                    style="@style/neteasa_music_time_text_sytle"
                    tools:text="05:34"/>

        </RelativeLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/linearLayoutOf_activity_music_playing"
                android:layout_above="@id/space_playing_music"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <ImageView
                    android:id="@+id/playMode"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/playing_random"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/playPre"
                    android:layout_margin="10dp"
                    android:src="@drawable/playing_prs"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/playButton"
                    android:layout_margin="10dp"
                    android:src="@drawable/selector_playing_bottom_state"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/playNext"
                    android:layout_margin="10dp"
                    android:src="@drawable/playing_next"
                    android:layout_width="wrap_content"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:layout_height="match_parent"/>
            <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:id="@+id/popUpMore"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:onClick="@{(v)->presenter.onClick(v)}"
                    android:src="@drawable/playing_list_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <Space
                android:id="@+id/space_playing_music"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    </com.lisocean.musicplayer.widget.BackgroundRelativeLayout>
</layout>
