<?xml version="1.0" encoding="utf-8"?>
<com.lisocean.musicplayer.widget.BackgroundRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_blackground"
        android:fitsSystemWindows="true">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            app:title="爱的双重魔力"
            app:subtitle="成人礼"
            app:titleTextAppearance="@style/netease_toolbar_title"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="#80FFFFFF"
            app:navigationIcon="@drawable/back"
            android:background="@android:color/transparent"/>
    <LinearLayout
            android:id="@+id/viewOf_activity_music_playing"
            android:layout_below="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#80FFFFFF"
            android:orientation="horizontal"/>
    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linearLayout1Of_activity_music_playing"
            android:layout_below="@+id/viewOf_activity_music_playing"/>
    <RelativeLayout
            android:id="@+id/linearLayout1Of_activity_music_playing"
            android:layout_above="@id/linearLayoutOf_activity_music_playing"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/tvCurrentTime"
                android:text="00:34"
                style="@style/neteasa_music_time_text_sytle"
                tools:text="00:34"/>
        <SeekBar
                android:id="@+id/musicSeekBar"
                android:layout_toEndOf="@id/tvCurrentTime"
                android:layout_toStartOf="@id/tvTotalTime"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/music_progress_sb"
                android:thumb="@drawable/seekbar_thumb"
                android:paddingEnd="5dp"
                android:paddingStart="15dp"
                android:maxHeight="1.5dp"
                android:minHeight="1.5dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="1dp"/>
        <TextView
                android:id="@+id/tvTotalTime"
                android:layout_marginEnd="15dp"
                android:layout_width="30dp"
                android:text="05:34"
                android:layout_alignParentEnd="true"
                style="@style/neteasa_music_time_text_sytle"
                tools:text="05:34"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayoutOf_activity_music_playing"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp">
        <ImageView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/playing_random"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <Space
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/playing_prs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        <ImageView
                android:id="@+id/immmmm"
                android:layout_margin="10dp"
                android:src="@drawable/playing_pause"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/playing_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <Space
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"/>
        <ImageView
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/playing_list_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>

</com.lisocean.musicplayer.widget.BackgroundRelativeLayout>