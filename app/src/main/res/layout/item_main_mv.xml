<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <variable name="item"
              type="com.lisocean.musicplayer.model.data.search.mainvideo.MainMvs.DataBean"/>
    <variable name="presenter"
              type="com.lisocean.musicplayer.ui.presenter.ItemClickPresenter"/>
</data>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:onClick="@{(v)->presenter.onItemClick(v,item)}"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/image"
                android:src="@drawable/background_corner"
                android:padding="5dp"
                url="@{item.cover}"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="200dp"/>

        <TextView
                android:id="@+id/name"
                android:text="@{item.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:textColor="#312F2F"
                android:textSize="16sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                tools:text="UTOPIA STORY EP.4 F.I.R成员阿沁力挺18岁甜蜜教主" tools:ignore="RtlSymmetry"/>
        <LinearLayout
                android:id="@+id/line1"
                android:layout_below="@id/name"
                android:background="@color/color_light_black"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="0.5dp" tools:ignore="RtlSymmetry" android:orientation="horizontal"/>
        <TextView
                android:id="@+id/briefDesc"
                android:text="@{item.briefDesc}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:textColor="#312F2F"
                android:layout_below="@id/line1"
                tools:text="最强新人王欣晨来袭！"
                tools:ignore="RtlSymmetry"/>
        <TextView
                android:id="@+id/artistName"
                android:text="@{item.artistName}"
                android:layout_below="@id/line1"
                android:paddingTop="13dp"
                android:textSize="12sp"
                android:layout_toEndOf="@id/briefDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="王欣晨 Amanda"/>
        <ImageView
                android:src="@drawable/main_play_count"
                android:layout_width="wrap_content"
                android:layout_above="@id/name"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/playCount"
                android:text="20w"
                android:paddingBottom="12dp"
                android:paddingStart="30dp"
                android:layout_above="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4230"/>
        <TextView
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:paddingEnd="10dp"
                android:layout_alignParentEnd="true"
                tools:text="#MV"/>
        <LinearLayout
                android:background="@color/gray"
                android:layout_below="@id/briefDesc"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
    </RelativeLayout>
</layout>