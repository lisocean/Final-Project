<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_corner_white"
            android:layout_margin="5dp">
        <TextView
                android:id="@+id/recommend_text"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/color_light_black"
                android:text="Top"
                android:background="@drawable/itemtouch_bg"
                android:gravity="center"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_height="45dp"/>
<LinearLayout
        android:id="@+id/line1"
        android:layout_below="@id/recommend_text"
        android:background="#1A000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:orientation="horizontal"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recommend_recyclerView"
                android:layout_width="match_parent"
                android:layout_below="@id/line1"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/line2"
                android:layout_below="@id/recommend_recyclerView"
                android:background="#1A000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" android:orientation="horizontal"/>

        <TextView
                android:id="@+id/loading"
                android:text="load More..."
                android:gravity="center"
                android:textSize="18sp"
                android:singleLine="true"
                android:textColor="@color/color_light_black"
                android:layout_marginStart="10dp"
                android:layout_below="@id/line2"
                android:layout_width="wrap_content"
                android:background="@drawable/itemtouch_bg"
                android:layout_height="40dp"/>

    </RelativeLayout>

</layout>